<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.industics.ilab.okr.dal.dao.mapper.PositionMapper">
    <insert id="addPosition">
        insert into position (position_id,position_name,bonus_type,update_time)
        values (MD5(UUID()),#{position_name},#{bonus_type},now());
    </insert>

    <update id="updatePosition">
        update position set position_name=#{position_name},bonus_type=#{bonus_type},update_time=now()
        where position_id=#{position_id}
    </update>

    <select id="getPositions" resultType="Map">
        select * from position
    </select>

    <delete id="deletePosition">
        delete from position where position_id=#{position_id}
    </delete>
</mapper>
